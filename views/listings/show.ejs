<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-3">
    <h3>Listing details</h3>
  </div>
  <div class="card col-6 offset-3">
    <img src="<%= result.image%>" class="card-img-top show-img" alt="..." />
    <div class="card-body">
      <p class="card-text">
        <b><%=result.title%></b><br />
        <%=result.description%><br />
        ‚Çπ<%=result.price.toLocaleString("en-IN")%> <br />
        <%=result.location%> <br />
        <%= result.country %>
      </p>
    </div>
  </div>
  <br />
  <div class="btns">
    <a
      href="/listings/<%=result._id%>/edit"
      class="btn btn-dark col-1 offset-3 show-edit-btn"
      >Edit</a
    >

    <form action="/listings/<%=result._id%>?_method=delete" method="post">
      <button class="btn btn-dark offset-5 show-delete-btn">Delete</button>
    </form>
  </div>

  <div class="col-8 offset-2 mb-4">
    <hr />
    <h4 class="text-center mb-4">üí¨ Leave a Review</h4>
    <form method="post" action="/listings/<%= result.id%>/reviews">
      <!-- Rating Section -->
      <div class="mb-4">
        <label for="rating" class="form-label fw-bold">Rating</label>
        <input
          type="range"
          class="form-range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          required
        />
        <div class="d-flex justify-content-between small text-muted">
          <span>1 ‚≠ê Poor</span>
          <span>5 ‚≠ê Excellent</span>
        </div>
      </div>

      <!-- Comment Section -->
      <div class="mb-4">
        <label for="comment" class="form-label fw-bold">Comments</label>
        <textarea
          class="form-control shadow-sm"
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          placeholder="Share your experience..."
          required
        ></textarea>
        <small class="text-muted">Your feedback helps us improve!</small>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="btn btn-dark px-4 py-2">
          <i class="bi bi-send"></i> Submit Review
        </button>
      </div>
    </form>
  </div>
</div>
