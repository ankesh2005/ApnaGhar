<% layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-3">
    <h3>Listing details</h3>
  </div>
  <div class="listing-card col-6 offset-3">
    <img src="<%= listing.image%>" class="card-img-top show-img" alt="..." />
    <div class="card-body">
      <p class="card-text">
        <b><%=listing.title%></b><br />
        <%=listing.description%><br />
        â‚¹<%=listing.price.toLocaleString("en-IN")%> <br />
        <%=listing.location%> <br />
        <%= listing.country %>
      </p>
    </div>
  </div>
  <br />
  <div class="btns">
    <a
      href="/listings/<%=listing._id%>/edit"
      class="btn btn-dark col-1 offset-3 show-edit-btn"
      >Edit</a
    >

    <form action="/listings/<%=listing._id%>?_method=delete" method="post">
      <button class="btn btn-dark offset-5 show-delete-btn">Delete</button>
    </form>
  </div>

  <%- include("./addReview.ejs") %>

  <%- include("./showReviews.ejs") %>
 
</div>
