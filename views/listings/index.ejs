<%- include("./searchFilter.ejs") %>

  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
    <!-- no listing found -->
    <% if(result.length === 0) { %>
  <div class="no-results text-center mt-5 col-6 offset-4">
